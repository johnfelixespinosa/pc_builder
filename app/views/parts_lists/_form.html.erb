<%= form_for @parts_list do |f| %>
  <form class="form-horizontal">
    <div class="form-group row">
      <%= f.label :name, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :name, class: "form-control col-sm-9" %>  
    </div>    
    <div class="form-group row">
      <%= f.label :cpu, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :cpu, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :cpu_cooler, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :cpu_cooler, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :motherboard, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :motherboard, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :ram, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :ram, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :storage, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :storage, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :video_card, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :video_card, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :case, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :case, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :power_supply, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :power_supply, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :operating_system, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :operating_system, class: "form-control col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :monitor, class: "col-sm-3 col-form-label text-secondary"%>
      <%= f.text_field :monitor, class: "form-control col-sm-9" %>
    </div>
    <div class="text-center">
      <%= f.submit class: 'btn-primary btn' %>
    </div>
  </form>      
<% end %>
