<div class="container">
<nav class="navbar justify-content-end">
    <h3 class="text-xs-center m-y-3 text-muted">Completed Builds</h3>    
</nav>

  <strong>Sort by</strong><br>
    <%= link_to "Newest", builds_path(search: "newest") %> |
    <%= link_to "Oldest", builds_path(search: "oldest") %>
  </div>

<% @builds.each do |build| %>       

  <div class="card">
  <%= link_to image_tag(build.images.first, class: "card-img"), build_path(build) %></img>
    <div class="card-header text-center">
      <h4 class="text-muted"><%= link_to build.title, build_path(build) %></h4> 
    </div>
    <div class="card-body">
      <ul class="list-group">
        <li class="list-group-item">
          <span class="badge badge badge-secondary">CPU</span>
          <label><%= build.parts_list.cpu %></label>
          <span class="badge badge badge-secondary">GPU</span>
          <label><%= build.parts_list.video_card %></label>
        </li>
      </ul>
    </div>
    <div class="card-footer text-center">
      <small class="text-muted">Last updated <%= build.created_at.to_date %> by 
        <%= link_to build.user.username.capitalize, user_path(build.user) %>
      </small>                
    </div>
  </div><br>

<% end %>
</div>